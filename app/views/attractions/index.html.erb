<h1>Listing attractions</h1>

<table class="table">
<tr><td>Name</td><td>Tickets</td><td>Details</td></tr>

<% @attractions.each do |attr| %>
<tr>
<td><%= attr.name %></td>
<td><%= attr.tickets %></td>
  <% if current_user.admin==true %>
  <td><%= link_to "Show #{attr.name}", attr %></td>
  <% else %>
  <td><%= link_to "Go on #{attr.name}", attr %></td>
  <% end %>
</tr>
<% end %>

</table>

<%= link_to "New Attraction", new_attraction_path %>